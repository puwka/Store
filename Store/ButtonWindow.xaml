<Window x:Class="Store.ButtonWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Store"
        mc:Ignorable="d"
        Title="КНГК Store - Главное меню" 
        Height="350" 
        Width="450"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#FFF0F0F0"
        FontFamily="Segoe UI">

    <Grid>
        <Border Background="White"
                BorderBrush="#FFDDDDDD"
                BorderThickness="1"
                CornerRadius="10"
                Width="380"
                Height="280"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                Padding="20">

            <StackPanel VerticalAlignment="Center">
                <TextBlock Text="КНГК Store" 
                           HorizontalAlignment="Center"
                           FontSize="26"
                           FontWeight="Bold"
                           Foreground="#FF0078D7"
                           Margin="0 0 0 15"/>

                <TextBlock Text="Выберите раздел" 
                           HorizontalAlignment="Center"
                           FontSize="16"
                           Margin="0 0 0 25"
                           Foreground="Gray"/>

                <Button Content="Касса" 
                        Click="CashierButton_Click"
                        Height="45"
                        Margin="0 0 0 15"
                        Background="#FF0078D7"
                        Foreground="White"
                        FontSize="16"
                        BorderThickness="0"
                        Cursor="Hand">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border" 
CornerRadius="20" 
Background="{TemplateBinding Background}"
BorderThickness="0">
                                <ContentPresenter HorizontalAlignment="Center" 
              VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#0066B3"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#005999"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <Button Content="Бухгалтерия" 
                        Click="AccountingButton_Click"
                        Height="45"
                        Background="#FF0078D7"
                        Foreground="White"
                        FontSize="16"
                        BorderThickness="0"
                        Cursor="Hand">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border" 
CornerRadius="20" 
Background="{TemplateBinding Background}"
BorderThickness="0">
                                <ContentPresenter HorizontalAlignment="Center" 
              VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#0066B3"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#005999"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
                <TextBlock HorizontalAlignment="Center" Margin="0,10,0,0" FontSize="14" FontWeight="Bold"><Hyperlink Foreground="#FF0078D7"
                    TextDecorations="None"
                    Click="ForgotPasswordLink_Click"><Run Text="Выйти"/></Hyperlink></TextBlock>
            </StackPanel>
        </Border>
    </Grid>
</Window>
