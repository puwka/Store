<Window x:Class="Store.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Store"
        mc:Ignorable="d"
        Title="КНГК Store" 
        Height="580" 
        Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Grid Background="#FFF5F5F5">
        <Border CornerRadius="10" 
                Background="White" 
                Width="320" 
                Height="430"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                BorderBrush="#FFE0E0E0"
                BorderThickness="1"
                Padding="30">

            <StackPanel>
                <TextBlock Text="КНГК Store" 
                           Foreground="#FF0078D7"
                           FontSize="24" 
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,10"/>

                <TextBlock Text="Вход в приложение для персонала" 
                           FontSize="14"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,30"
                           Foreground="Gray"/>

                <Label Content="Введите ваш логин" 
                          Margin="0,0,0,0" Foreground="Gray"/>

                <TextBox x:Name="loginBox"
                         Height="35" 
                         Padding="5"
                         Margin="0,0,0,10"/>

                <Label Content="Введите ваш пароль" 
                          Margin="0,0,0,0" Foreground="Gray"/>

                <PasswordBox x:Name="passwordBox"
                             Height="35" 
                             Padding="5"
                             Margin="0,0,0,10"/>

                <TextBlock x:Name="ErrorText" Foreground="Red" Margin="0,0,0,10"
                    TextWrapping="Wrap" Visibility="Collapsed"/>

                <TextBlock>
                    <Hyperlink Foreground="#FF0078D7"
                               TextDecorations="None"
                               Click="ForgotPasswordLink_Click">
                        Забыл пароль?
                    </Hyperlink>
                </TextBlock>

                <Button Content="Войти" 
                        Click="LoginButton_Click"
                        Height="40"
                        Background="#FF0078D7"
                        Foreground="White"
                        FontWeight="Bold"
                        BorderThickness="0"
                        Margin="0,30,0,15"
                        FontSize="16"
                        Cursor="Hand">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border" 
                    CornerRadius="20" 
                    Background="{TemplateBinding Background}"
                    BorderThickness="0">
                                <ContentPresenter HorizontalAlignment="Center" 
                                  VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#0066B3"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#005999"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>
        </Border>
    </Grid>
</Window>
